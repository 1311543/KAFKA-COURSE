{
    "name": "file-sink-test",
    "config": {
        "connector.class": "FileStreamSink",
        "tasks.max": "2",
        "file": "/tmp/data/file-sink-test.txt",
        "topics": "file-sink-test",
        "key.converter": "org.apache.kafka.connect.json.JsonConverter",
        "value.converter": "org.apache.kafka.connect.json.JsonConverter",
        "key.converter.schemas.enable": "true",
        "value.converter.schemas.enable": "true",

        "transforms": "AddSourceField,RenamePersonaId,FilterPrestamos",

        "transforms.AddSourceField.type": "org.apache.kafka.connect.transforms.InsertField$Value",
        "transforms.AddSourceField.static.field": "source",
        "transforms.AddSourceField.static.value": "kafka-connect",


        "transforms.RenamePersonaId.type": "org.apache.kafka.connect.transforms.ReplaceField$Value",
        "transforms.RenamePersonaId.renames": "personaId:person_id",

        "transforms.FilterPrestamos.type": "org.apache.kafka.connect.transforms.Filter$Value",
        "transforms.FilterPrestamos.predicate": "IsPrestamos",
        "predicates": "IsPrestamos",
        "predicates.IsPrestamos.type": "org.apache.kafka.connect.transforms.predicates.RecordValueMatch",
        "predicates.IsPrestamos.field": "transaction_type",
        "predicates.IsPrestamos.pattern": "prestamos",

        "errors.retry.timeout": "60000",
        "errors.retry.delay.max.ms": "5000",
        "errors.tolerance": "all",
        "errors.deadletterqueue.topic.name": "file-sink-dlq",
        "errors.deadletterqueue.context.headers.enable": "true"
    }
}